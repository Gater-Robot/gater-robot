# convex (backend) environment template
#
# For local development, Convex CLI commonly reads `convex/.env.local`.
# For production, set these in the Convex dashboard / via `convex env set`.

###############################################################################
# Telegram initData validation (security)
###############################################################################

# Optional. Max age (seconds) for Telegram initData validation.
TELEGRAM_INITDATA_MAX_AGE_SECONDS=86400

# Dev-only. Allow mock initData payloads (hash=mock). Useful for browser dev.
ALLOW_MOCK_INITDATA=false

# Recommended for production. When true, legacy insecure admin mutations are disabled.
DISABLE_INSECURE_MUTATIONS=true

###############################################################################
# Bot verification (Telegram API)
###############################################################################

# Required for channel bot-admin verification via Telegram API.
# Either key is accepted.
BOT_TOKEN=your_telegram_bot_token
TELEGRAM_BOT_TOKEN=

###############################################################################
# Admin restrictions (optional extra layer)
###############################################################################

# Optional extra security layer. If set to a non-empty CSV list, secure admin actions
# are restricted to these Telegram user IDs.
ADMIN_IDS=

###############################################################################
# RPC provider configuration
###############################################################################

# Recommended. Used as a fallback for supported chains when per-chain RPC overrides
# are not set.
ALCHEMY_API_KEY=your-alchemy-api-key

# Per-chain overrides (optional). Pattern: <CHAINKEY>_RPC_URL where CHAINKEY comes
# from `@gater/chain-registry` (SUPPORTED_CHAINS).
#
# Convex prefers:
# 1) <CHAINKEY>_RPC_URL
# 2) ALCHEMY_API_KEY (where supported)
# 3) viem default public RPC

MAINNET_RPC_URL=
BASE_RPC_URL=
ARBITRUM_RPC_URL=
POLYGON_RPC_URL=
BSC_RPC_URL=
OPTIMISM_RPC_URL=
BERACHAIN_RPC_URL=
HYPEREVM_RPC_URL=
INK_RPC_URL=
KATANA_RPC_URL=
LENS_RPC_URL=
LINEA_RPC_URL=
MONAD_RPC_URL=
OPBNB_RPC_URL=
PLASMA_RPC_URL=
SONIC_RPC_URL=
UNICHAIN_RPC_URL=
ZKSYNC_RPC_URL=
SCROLL_RPC_URL=
AVALANCHE_RPC_URL=
MANTLE_RPC_URL=
WORLDCHAIN_RPC_URL=
AURORA_RPC_URL=
CELO_RPC_URL=
SHIBARIUM_RPC_URL=
SEPOLIA_RPC_URL=
BASESEPOLIA_RPC_URL=

###############################################################################
# Convex CLI (optional)
###############################################################################

# Used by Convex CLI for dev/deploy workflows.
CONVEX_DEPLOYMENT=dev:your-deployment-name
CONVEX_URL=https://your-deployment.convex.cloud
CONVEX_SITE_URL=https://your-deployment.convex.site
CONVEX_DEPLOY_KEY=your-convex-deploy-key

